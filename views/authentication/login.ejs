<!DOCTYPE html>
<html>
  <head>
    <title>Đăng nhập</title>
  </head>
  <body>
    <h2>Login</h2>
    <form action="/auth/postLogin" method="POST">
      <input
        type="text"
        name="username"
        placeholder="Tên đăng nhập"
        autocomplete="off"
        required
      /><br />
      <input
        type="password"
        name="password"
        placeholder="Mật khẩu"
        required
      /><br />
      <button type="submit">Đăng nhập</button>
    </form>
    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>
  </body>
</html>
